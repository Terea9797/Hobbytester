from fastapi import FastAPI
from fastapi.middleware.cors import CORSMiddleware

from .settings import settings
from .database import engine, Base
from .routers import auth, profile, actions, catalog, confirm_dev
from . import models  # ensure models are imported for metadata

app = FastAPI(title="Mafia Game API")
app.include_router(confirm_dev.router)\n
# DEBUG: print DSN on startup
try:
    from .settings import settings
    print('>>> EFFECTIVE_DATABASE_URL:', getattr(settings, 'DATABASE_URL', getattr(settings, 'database_url', None)))
except Exception as _e:
    print('>>> DSN DEBUG FAILED:', _e)

# CORS - single instance
app.add_middleware(
    CORSMiddleware,
    allow_origins=settings.CORS_ORIGINS or ["http://localhost:5173", "http://127.0.0.1:5173"],
    allow_credentials=True,
    allow_methods=["*"],
    allow_headers=["*"],
)

app.include_router(auth.router)
app.include_router(profile.router)
app.include_router(actions.router)
app.include_router(catalog.router)

@app.on_event("startup")
async def on_startup():
    async with engine.begin() as conn:
        await conn.run_sync(Base.metadata.create_all)

@app.get("/")
async def health():
    return {"status": "ok"}



